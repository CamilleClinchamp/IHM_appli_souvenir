<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>
    <!-- TextView Style -->
    <style name="ProductSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!-- EditText Style -->
    <style name="ProductSansEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!-- Button style -->
    <style name="ProductSansButtonStyle" parent="android:Widget.Button" >
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--- Card style -->
<!--    <style name="CartViewStyle" parent="android:Widget.Button" >-->
<!--        <item name="android:background">@drawable/button_background</item>-->
<!--    </style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/ProductSansTextViewStyle</item>
        <item name="android:buttonStyle">@style/ProductSansButtonStyle</item>
        <item name="android:editTextStyle">@style/ProductSansEditTextStyle</item>
        <item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
<!--        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppTheme.PopupMenu</item>-->
    </style>

<!--    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">-->
<!--        &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="android:background">@color/colorPrimary</item>-->
<!--    </style>-->
    <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <!-- action bar background - without android prefix -->
        <item name="background">@color/colorPrimary</item>
        <!-- action bar elevation - without android prefix -->
        <item name="elevation">0dp</item>
    </style>
    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

</resources>